<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:av="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="av" x:Class="Rditil.Views.AdminPanel"
      Title="AdminPanel" av:DesignHeight="333.584" av:DesignWidth="554.782">

    <Grid Margin="20">
        <StackPanel Margin="0,20,0,0">
            <TextBlock Text="Ajouter un utilisateur" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Nom"/>
                <TextBox Text="{Binding NouvelUtilisateur.Nom}" />
                <TextBlock Text="Prénom"/>
                <TextBox Text="{Binding NouvelUtilisateur.Prenom}" />
                <TextBlock Text="Email"/>
                <TextBox Text="{Binding NouvelUtilisateur.Email}" />
                <TextBlock Text="Mot de passe"/>
                <CheckBox Content="Admin" IsChecked="{Binding NouvelUtilisateur.IsAdmin}" />
                <PasswordBox Width="120" Margin="0,0,10,0" x:Name="PasswordBox" PasswordChanged="PasswordBox_PasswordChanged" />
                <CheckBox Content="Admin" IsChecked="{Binding NouvelUtilisateur.IsAdmin}" VerticalAlignment="Center" />
            </StackPanel>
            <Button Content="Ajouter" Width="100" Command="{Binding AjouterCommand}" Margin="0,0,0,10"/>
        </StackPanel>
    </Grid>
</Page>
